<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="580.0" prefWidth="831.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyecto_final_programacion_2.Controllers.GestionUsuarioController">
    <children>
        <VBox layoutX="14.0" layoutY="70.0" prefHeight="429.0" prefWidth="287.0" spacing="20.0">
            <children>
                <Text fill="WHITE" text="Gestión de Usuario">
                    <font>
                        <Font name="Algerian" size="24.0" />
                    </font>
                </Text>
                <TextField fx:id="nombreCampo" prefHeight="30.0" prefWidth="287.0" promptText="Nombre" />
                <TextField fx:id="cedulaCampo" prefHeight="30.0" prefWidth="287.0" promptText="Cédula" />
                <TextField fx:id="telefonoCampo" prefHeight="30.0" prefWidth="287.0" promptText="Teléfono" />
                <HBox spacing="10">
                    <children>
                        <Button fx:id="añadirUsuarioBoton" onAction="#añadirUsuarioAccion" text="Agregar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                        <Button fx:id="editarUsuarioBoton" onAction="#editarUsuarioAccion" text="Editar" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                    </children>
                </HBox>
                <Button fx:id="eliminarUsuarioBoton" onAction="#eliminarUsuarioAccion" text="Eliminar" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                <Button fx:id="atrasBoton" onAction="#atrasAccion" text="Volver" textFill="RED" />
            </children>
        </VBox>

        <TableView fx:id="usuariosTabla" layoutX="323.0" layoutY="70.0" prefHeight="440.0" prefWidth="490.0" style="-fx-background-color: rgba(240, 240, 240, 0.9);">
            <columns>
                <TableColumn fx:id="nombreColumna" prefWidth="160.0" text="Nombre" />
                <TableColumn fx:id="cedulaColumna" prefWidth="160.0" text="Cédula" />
                <TableColumn fx:id="telefonoColumna" prefWidth="160.0" text="Teléfono" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
