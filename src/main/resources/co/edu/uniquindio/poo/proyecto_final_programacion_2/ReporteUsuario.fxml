<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyecto_final_programacion_2.Controllers.ReporteUsuarioController">

    <!-- Título principal -->
    <Label layoutX="230.0" layoutY="10.0" prefWidth="500.0" style="-fx-text-fill: black;" text="Reporte de las cuentas de usuarios">
        <font>
            <Font name="Arial" size="28.0" />
        </font>
    </Label>

    <!-- ComboBox para seleccionar usuario -->
    <ComboBox fx:id="comboTipoCuenta" layoutX="30" layoutY="70" prefWidth="200" promptText="Escoja el usuario" style="-fx-background-color: gray; -fx-text-fill: white;" />

    <!-- Botón para generar el reporte -->
    <Button fx:id="btnGenerarReporte" layoutX="250" layoutY="70" style="-fx-font-family: Algerian; -fx-background-color: #007acc; -fx-text-fill: white;" text="Generar Reporte" />

    <!-- PieChart: Distribución de tipos de cuenta -->
    <PieChart fx:id="pieChart" layoutX="131.0" layoutY="162.0" prefHeight="365.0" prefWidth="638.0" style="-fx-background-color: gray;" title="Porcentaje de cuentas por tipo" />
    <Label layoutX="354.0" layoutY="120.0" text="Distribución de cuentas">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
   <Button fx:id="btnVolver" layoutX="31.0" layoutY="22.0" onAction="#VolverAccion" prefHeight="26.0" prefWidth="69.0" style="-fx-font-family: Calibri; -fx-background-color: green; -fx-text-fill: white;" text="Volver" />

</AnchorPane>
