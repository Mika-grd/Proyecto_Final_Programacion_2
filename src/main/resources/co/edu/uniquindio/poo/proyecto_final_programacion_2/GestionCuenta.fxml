<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyecto_final_programacion_2.Controllers.GestionCuentaController">
    <children>
        <VBox layoutX="30.0" layoutY="90.0" spacing="20.0" prefWidth="300.0">
            <children>
                <Text text="Gestión de Cuentas" fill="WHITE">
                    <font>
                        <Font name="Algerian" size="26.0" />
                    </font>
                </Text>
                <TextField fx:id="numeroCuentaCampo" promptText="Número de Cuenta" />
                <TextField fx:id="saldoCampo" promptText="Saldo" />
                <ComboBox fx:id="tipoCuentaCombo" promptText="Tipo de Cuenta" prefWidth="200.0" />
                <HBox spacing="10">
                    <children>
                        <Button fx:id="agregarCuentaBoton" text="Agregar" onAction="#agregarCuenta" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                        <Button fx:id="editarCuentaBoton" text="Editar" onAction="#editarCuenta" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                        <Button fx:id="eliminarCuentaBoton" text="Eliminar" onAction="#eliminarCuenta" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                    </children>
                </HBox>
                <Button fx:id="volverBoton" text="Volver" onAction="#volverAccion" textFill="RED" />
            </children>
        </VBox>

        <TableView fx:id="cuentasTabla" layoutX="360.0" layoutY="90.0" prefWidth="470.0" prefHeight="450.0" style="-fx-background-color: rgba(240, 240, 240, 0.9);">
            <columns>
                <TableColumn fx:id="numeroCuentaColumna" text="Número de Cuenta" prefWidth="150"/>
                <TableColumn fx:id="saldoColumna" text="Saldo" prefWidth="150"/>
                <TableColumn fx:id="tipoCuentaColumna" text="Tipo de Cuenta" prefWidth="170"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>

