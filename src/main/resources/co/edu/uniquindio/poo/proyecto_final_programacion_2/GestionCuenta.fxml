<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.poo.proyecto_final_programacion_2.Controllers.GestionCuentaController" prefWidth="800" prefHeight="600" style="-fx-background-color: black;">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <!-- TÍTULO -->
        <Label text="Gestión de Cuentas" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-family: Algerian;" />

        <!-- FORMULARIO -->
        <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
            <Label text="ID:" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Banco:" style="-fx-text-fill: white;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNombreBanco" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Número Cuenta:" style="-fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNumCuenta" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Usuario:" style="-fx-text-fill: white;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtUsuario" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Tipo de Cuenta:" style="-fx-text-fill: white;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboTipoCuenta" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Categoría:" style="-fx-text-fill: white;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboCategoria" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <!-- CAMPOS DÉBITO -->
            <HBox fx:id="boxDebito" spacing="10" visible="false" GridPane.rowIndex="6" GridPane.columnIndex="1">
                <Label text="Saldo:" style="-fx-text-fill: white;"/>
                <TextField fx:id="txtSaldo" prefWidth="100"/>
            </HBox>

            <!-- CAMPOS CRÉDITO -->
            <HBox fx:id="boxCredito" spacing="10" visible="false" GridPane.rowIndex="7" GridPane.columnIndex="1">
                <Label text="Tasa de Interés:" style="-fx-text-fill: white;"/>
                <TextField fx:id="txtTasaInteres" prefWidth="100"/>
                <Label text="Cupo Disponible:" style="-fx-text-fill: white;"/>
                <TextField fx:id="txtCupoDisponible" prefWidth="100"/>
                <Label text="Cupo En Uso:" style="-fx-text-fill: white;"/>
                <TextField fx:id="txtCupoEnUso" prefWidth="100"/>
            </HBox>

        </GridPane>

        <!-- BOTONES -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="btnAgregar" text="Agregar" style="-fx-font-family: Algerian;"/>
            <Button fx:id="btnEliminar" text="Eliminar" style="-fx-font-family: Algerian;"/>
            <Button fx:id="btnActualizar" text="Actualizar" style="-fx-font-family: Algerian;"/>
        </HBox>

        <!-- TABLA DE CUENTAS -->
        <TableView fx:id="tablaCuentas" prefHeight="250">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colBanco" text="Banco" prefWidth="120"/>
                <TableColumn fx:id="colNumero" text="Número" prefWidth="120"/>
                <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="150"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="120"/>
            </columns>
        </TableView>

    </VBox>
</AnchorPane>
