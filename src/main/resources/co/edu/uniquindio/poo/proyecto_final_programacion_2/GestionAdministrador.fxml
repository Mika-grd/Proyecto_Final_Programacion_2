<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyecto_final_programacion_2.Controllers.GestionAdministrador">
    <children>
        <VBox layoutX="30.0" layoutY="90.0" prefWidth="300.0" spacing="20.0">
            <children>
                <Text fill="WHITE" text="Gestión de Administradores">
                    <font>
                        <Font name="Algerian" size="26.0" />
                    </font>
                </Text>
                <TextField fx:id="nombreCampo" prefHeight="17.0" prefWidth="288.0" promptText="Nombre" />
                <TextField fx:id="cedulaCampo" promptText="Cédula" />
                <TextField fx:id="correoCampo" promptText="Correo" />
                <HBox spacing="10">
                    <children>
                        <Button fx:id="agregarAdministradorBoton" onAction="#agregarAdministrador" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Agregar" />
                        <Button fx:id="editarAdministradorBoton" onAction="#editarAdministrador" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Editar" />
                        <Button fx:id="eliminarAdministradorBoton" onAction="#eliminarAdministrador" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Eliminar" />
                    </children>
                </HBox>
                <Button fx:id="volverBoton" onAction="#volverAccion" text="Volver" textFill="RED" />
            </children>
        </VBox>

        <TableView fx:id="administradoresTabla" layoutX="415.0" layoutY="90.0" prefHeight="450.0" prefWidth="443.0" style="-fx-background-color: rgba(240, 240, 240, 0.9);">
            <columns>
                <TableColumn fx:id="nombreColumna" prefWidth="150" text="Nombre" />
                <TableColumn fx:id="cedulaColumna" prefWidth="150" text="Cédula" />
                <TableColumn fx:id="correoColumna" prefWidth="170" text="Correo" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
